{{ 'section-product-description.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .product-description__wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80%;
    max-width: 900px;
    background-color: var(--color-secondary-light);
    border-radius: {{ section.settings.border_radius | default: 32 }}px;
    padding: 4rem 2rem;
    margin: 4rem auto 3rem;
    box-sizing: border-box;
  }

  @media screen and (max-width: 767px) {
    .product-description__wrapper {
      width: calc(100% - 4rem);
      border-radius: {{ section.settings.border_radius_mobile | default: 15 }}px;
      padding: 2rem 1.5rem;
      margin: 4rem 2rem 3rem;
    }
  }

  .product-description h2.product-description-heading {
    font-size: var(--font-size-title-lg);
    color: var(--color-primary);
    text-transform: uppercase;
    font-family: var(--font-heading-family);
    line-height: 1;
    margin: 0;
    padding: 0 0 1rem;
    font-weight: bold;
    text-align: center;
    display: block;
    width: 100%;
    clear: both;
  }

  .product-description__content {
    font-size: var(--font-size-body-lg);
    line-height: 1.6;
    color: #330073;
  }

  .product-description__content p {
    font-size: var(--font-size-body-lg);
    margin: 0 0 1rem;
  }
{%- endstyle -%}

<div class="product-description section-{{ section.id }}-padding{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="product-description__wrapper{% if section.settings.full_width %} page-width{% endif %}">
    <h2 class="product-description-heading">
      {%- if section.settings.title != blank -%}
        {{ section.settings.title }}
      {%- else -%}
        {{ 'sections.product_description.settings.title.default' | t }}
      {%- endif -%}
    </h2>
    <div class="product-description__content">
      {{ product.description }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.product_description.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "t:sections.product_description.settings.title.default",
      "label": "t:sections.product_description.settings.title.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Make section full width"
    },
    {
      "type": "header",
      "content": "Section styling"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Border radius (desktop)",
      "default": 32
    },
    {
      "type": "range",
      "id": "border_radius_mobile",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Border radius (mobile)",
      "default": 15
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Product Description"
    }
  ]
}
{% endschema %}
